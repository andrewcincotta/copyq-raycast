{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "copyq-clipboard-manager",
  "title": "CopyQ Clipboard Manager",
  "description": "Lists CopyQ clipboard entries and allows user to paste them.",
  "icon": "command-icon.png",
  "author": "andrewcincotta",
  "categories": ["Productivity"],
  "license": "MIT",
  "commands": [
    {
      "name": "clipboard-manager",
      "title": "View Clipboard",
      "description": "Lists CopyQ clipboard contents and allows the user to select a tab.",
      "mode": "view",
      "preferences": [
        {
          "type": "textfield",
          "name": "copyq_path",
          "title": "CopyQ Path",
          "description": "Path to CopyQ executable",
          "default": "/usr/local/bin/copyq",
          "required": true
        },
        {
          "type": "textfield",
          "name": "default_tab",
          "title": "Default Tab",
          "description": "Name of Default CopyQ Tab",
          "required": true
        },
        {
          "type": "textfield",
          "name": "max_entries",
          "title": "Max Number of Entries",
          "description": "Maximum Number of Entries to Display. If Set to 0, All Entries Will Be Displayed.",
          "default": "0",
          "required": true
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.60.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "18.18.4",
    "@types/react": "18.2.27",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.51.0",
    "eslint-plugin-react": "^7.33.2",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
